<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trackItem"
    android:background="?android:selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playListImage"
        style="@style/TrackImage"
        tools:src="@tools:sample/avatars" />

    <LinearLayout style="@style/LinearLayoutWeightVertical">

        <TextView
            android:id="@+id/playListName"
            style="@style/TrackName"
            tools:text="@string/no_reply" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout style="@style/LinearLayoutWeightVertical">

                <TextView
                    android:id="@+id/numberTracks"
                    style="@style/playListTrackNumberText"
                    tools:text="@string/no_reply"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>




