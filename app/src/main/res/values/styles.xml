<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">30</item>
        <!--        <item name="android:backgroundTint">@color/white</item>-->
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/buttonR</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconTint">@color/black</item>
        <!--        <item name="android:foreground">?attr/selectableItemBackground</item>-->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>


    </style>

    <style name="TextStyleSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightSettingText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="HeaderMain">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="HeaderSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

</resources>