<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">30</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/buttonR</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextStyleSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightSettingText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="drawableTint">@color/aluminium</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">@color/aluminium</item>
        <item name="trackTint">@color/gray</item>
    </style>

    <style name="ToolbarMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightToolBar</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="titleTextColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightToolBar</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightEditText</item>
        <item name="android:background">@color/noColor</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColorHint">@color/aluminium</item>
        <item name="drawableTint">@color/aluminium</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchLinearLayout">
        <item name="android:background">@color/gray</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="tint">@color/aluminium</item>

    </style>

    <style name="ImageItem">
        <item name="android:layout_width">@dimen/imageTrackWidth</item>
        <item name="android:layout_height">@dimen/imageTrackHeight</item>
        <item name="tint">@color/aluminium</item>
    </style>

    <style name="LinearLayoutWeightVertical">
        <item name="android:layout_width">@dimen/TrackLayoutWidth_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TrackImage">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">13dp</item>
    </style>


    <style name="TrackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">@dimen/TrackNameText</item>
    </style>

    <style name="TrackArtist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/aluminium</item>
        <item name="android:textSize">@dimen/TrackArtistText</item>
    </style>

    <style name="TrackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/aluminium</item>
        <item name="android:textSize">@dimen/TrackArtistText</item>
        <item name="drawableStartCompat">@drawable/ellipse</item>
    </style>

    <style name="TrackArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/arrow_forward</item>
        <item name="android:tint">@color/aluminium</item>
    </style>

    <style name="ErrorSearchText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">228dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="UpdateSearchButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">338dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="placeholderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>