<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">30</item>
        <!--        <item name="android:backgroundTint">@color/white</item>-->
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/buttonR</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconTint">@color/black</item>
        <!--        <item name="android:foreground">?attr/selectableItemBackground</item>-->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextStyleSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightSettingText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="ToolbarMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightToolBar</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="titleTextColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightToolBar</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/heightEditText</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/noColor</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColorHint">@color/aluminium</item>
        <item name="drawableTint">@color/aluminium</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchLinearLayout">
        <item name="android:background">@color/gray</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="tint">@color/aluminium</item>

    </style>




</resources>